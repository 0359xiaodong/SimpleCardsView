<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:id="@+id/card_expand_inner_layout"
        android:background="@drawable/card_expand"
    android:focusable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Example:"
        android:id="@+id/txtvwExpandValue1"
        android:textColor="@color/card_text_color"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Customizing"
        android:id="@+id/txtvwExpandValue3"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/txtvwExpandValue2"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/txtvwExpandValue2"
        android:layout_marginLeft="37dp"
        android:focusable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I can put this here"
        android:id="@+id/button2"
        android:layout_below="@+id/txtvwExpandValue1"
        android:layout_alignLeft="@+id/txtvwExpandValue1"
        android:layout_alignStart="@+id/txtvwExpandValue1"
        android:focusable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/txtvwExpandValue2"
        android:textColor="@color/card_text_color"
        android:textSize="15sp"
        android:text=" An Example"
        android:layout_toEndOf="@+id/txtvwExpandValue1"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/checkBox2"
        android:layout_toStartOf="@+id/checkBox2"
        android:focusable="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I can put this too"
        android:id="@+id/checkBox2"
        android:checked="false"
        android:layout_alignBottom="@+id/button2"
        android:layout_below="@+id/txtvwExpandValue3"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusable="false" />

</RelativeLayout>












